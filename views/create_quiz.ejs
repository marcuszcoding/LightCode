<h1>Make Your Own Quiz</h1>

<form>
  <div>
    <label for="quiz-title">Quiz Title:</label>
    <input type="text" id="quiz-title" name="quiz-title" required>
  </div>
  <div class="privacy">
          <input id="is-private" type="radio" name="isPrivate" value="true">Private</input>
          <input id="is-public" type="radio" name="isPrivate" value="false">Public</input>
  </div>
  <div>
    <label for="quiz-questions">Question:</label>
    <input type="text" id="quiz-questions" name="quiz-questions" required>
  </div>
  <div>
    <label for="quiz-answers">Answers:</label>
        <ol>
          <li><input type="text" id="answer-1-1" name="answer-1-1" required></li>
          <li><input type="text" id="answer-1-2" name="answer-1-2" required></li>
          <li><input type="text" id="answer-1-3" name="answer-1-3" required></li>
          <li><input type="text" id="answer-1-4" name="answer-1-4" required></li>
        </ol>

  </div>
  <div>
    <button type="submit">Add Question</button>
  </div>
  <div>
    <button type="submit">Create Quiz</button>
  </div>
</form>
